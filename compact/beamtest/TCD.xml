<lccdd>

<readouts>
  <readout name="TelescopeCherenkovHits">
    <segmentation type="CartesianGridXY" grid_size_x="25*mm" grid_size_y="25*mm" />
    <id>system:6,pmt:12,x:32:-16,y:-16</id>
  </readout>
</readouts>

<detectors>
<comment>
  Light Gas Cherenkov Begin
</comment>
<detector
  id="7"
  name="TelescopeCherenkov"
  type="SoLID_TelescopeCherenkov"
  readout="TelescopeCherenkovHits">

<placement x="0*cm" y="0*cm" z="100*cm" />
<tank material="Aluminum" vis="AnlLightGray"
  rmin="7*cm" rmax1="8*cm" rmax2="9*cm"
  flange_width="1*cm" length1="58.25*cm" length2="30*cm"
  intersect_shift="10*cm" vert_height="22*cm"/>
<box material="Aluminum" side="20*cm" height="10*cm" thickness="1*cm"/>
<mirror vis="AnlTeal" material="PyrexGlass" thickness="5*mm" r="6*cm"/>
</detector>

</detectors>
</lccdd>
